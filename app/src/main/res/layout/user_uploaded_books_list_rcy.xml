<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/_7sdp"
    android:layout_marginEnd="@dimen/_7sdp"
    android:layout_marginTop="@dimen/_7sdp"
    android:elevation="@dimen/_10sdp"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_1sdp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">




        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            android:elevation="@dimen/_5sdp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/bookimageupli"
                android:layout_width="@dimen/_64sdp"
                android:scaleType="fitXY"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/bookdemo" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/cardView2">

            <TextView
                android:id="@+id/booktitleupli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/black"
                android:text="Your book is very good and so great i can imagine it"
                app:layout_constraintStart_toStartOf="@+id/textView30"
                app:layout_constraintTop_toTopOf="@+id/cardView2" />

            <TextView
                android:id="@+id/booknameupli"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_11sdp"
                android:layout_height="wrap_content"
                android:text="Math Rs agrawal"
                app:layout_constraintStart_toEndOf="@+id/cardView2"
                app:layout_constraintTop_toBottomOf="@+id/textView28" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/editbutton"
        android:layout_width="wrap_content"
        android:text="Edit Book Detail.."
        android:padding="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:drawableLeft="@drawable/baseline_edit_note_24"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/MainAppColour"
        android:layout_height="wrap_content">

    </TextView>
    <TextView
        android:id="@+id/soldupli"
        android:layout_width="wrap_content"
        android:text="Sold Out"
        android:padding="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:drawableLeft="@drawable/baseline_delete_outline_24"
        android:textSize="@dimen/_12sdp"
        android:textColor="#CB2526"
        android:layout_height="wrap_content">

    </TextView>

</LinearLayout>



        </LinearLayout>


    </LinearLayout>

</LinearLayout>


</androidx.cardview.widget.CardView>