<!-- item_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shimmer_duration="1000"
        app:shimmer_repeat_delay="1000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_7sdp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            app:cardCornerRadius="@dimen/_5sdp">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="@dimen/_127sdp"
                android:layout_height="@dimen/_150sdp"
                android:background="#652C2C2C"
                android:scaleType="fitXY"
              />
            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                app:shimmer_duration="1000"
                app:shimmer_repeat_delay="2000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </com.facebook.shimmer.ShimmerFrameLayout>


        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/textView16"
            android:layout_width="@dimen/_126sdp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:fontFamily="@font/jacques_francois"
            android:foreground="#66333333"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_20sdp"

                android:paddingStart="@dimen/_5sdp"
                android:foreground="#665C5C5C"
                android:layout_marginStart="@dimen/_6sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />




    </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</LinearLayout>
